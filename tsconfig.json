{
    "compilerOptions": {
        "outDir": "./build",
        "rootDir": ".",
        "module": "commonjs",
        "baseUrl": "./src",
        "target": "ES2019",
        "esModuleInterop": true,
        "allowJs": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "paths": {
            "@src/*": ["./src/*"],
            "@infra/*": ["./infra/*"],
            "@domain/*": ["./domain/*"],
            "@application/*": ["./application/*"]
        }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
